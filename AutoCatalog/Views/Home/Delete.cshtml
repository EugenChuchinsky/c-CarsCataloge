@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AutoCatalog.Models.Car

<h2>Удаление авто</h2>
<dl>
    <dt>Название</dt>
    <dd>
        @Html.DisplayFor(model => model.Mark)
    </dd>

    <dt>Автор</dt>
    <dd>
        @Html.DisplayFor(model => model.Model)
